<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".module.test.activity.TestResultActivity">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_dp_20"
        android:layout_marginTop="@dimen/dk_dp_20"
        android:layout_marginRight="@dimen/dk_dp_20"
        android:background="@drawable/bg_result"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="总题数:               2道"
            android:textColor="@color/white"
            android:textSize="@dimen/dk_dp_20" />

        <TextView
            android:id="@+id/tv_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="回答正确题数:  0道"
            android:textColor="@color/white"
            android:textSize="@dimen/dk_dp_20" />

        <com.github.ring.CircleProgress
            android:id="@+id/cp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:decimalPointLength="1"
            app:disableAngle="0"
            app:duration="1000"
            app:isClockwise="true"
            app:isDecimal="true"
            app:isRound="true"
            app:isShowPercentText="true"
            app:maxProgress="200"
            app:progress="120"
            app:ringRadius="90dp"
            app:ringWidth="10dp"
            app:textSize="22sp"
            app:useAnimation="true" />

    </LinearLayout>
</LinearLayout>